<.header>
  Stripe price <%= @stripe_price.id %>
  <:subtitle>This is a stripe_price record from your database.</:subtitle>
  <:actions>
    <.link patch={~p"/admin/stripe_prices/#{@stripe_price}/show/edit"} phx-click={JS.push_focus()}>
      <.button>Edit stripe_price</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title="Stripe price"><%= @stripe_price.stripe_price_id %></:item>
  <:item title="Stripe lookup key"><%= @stripe_price.stripe_lookup_key %></:item>
  <:item title="Subscription plan id"><%= @stripe_price.subscription_plan_id %></:item>
</.list>

<.back navigate={~p"/admin/stripe_prices"}>Back to stripe_prices</.back>

<.modal :if={@live_action == :edit} id="stripe_price-modal" show on_cancel={JS.patch(~p"/admin/stripe_prices/#{@stripe_price}")}>
  <.live_component
    module={BrightWeb.StripePriceLive.FormComponent}
    id={@stripe_price.id}
    title={@page_title}
    action={@live_action}
    stripe_price={@stripe_price}
    patch={~p"/admin/stripe_prices/#{@stripe_price}"}
  />
</.modal>
